loader.entrypoint.uri = "file:{{ gramine.libos }}"
libos.entrypoint = "/usr/bin/python3"

loader.argv = ["python3", "sgx_inference.py"]

loader.env.LD_LIBRARY_PATH = "/lib:/usr/lib/x86_64-linux-gnu:/usr/lib"
loader.env.PYTHONPATH = "/usr/lib/python3.10:/usr/lib/python3/dist-packages:/usr/local/lib/python3.10/dist-packages"

# SGX Configuration
sgx.enclave_size = "512M"
sgx.max_threads = 16
sgx.debug = true

# File system
fs.mounts = [
    { path = "/lib", uri = "file:/lib" },
    { path = "/lib64", uri = "file:/lib64" },
    { path = "/usr/lib", uri = "file:/usr/lib" },
    { path = "/usr/lib/x86_64-linux-gnu", uri = "file:/usr/lib/x86_64-linux-gnu" },
    { path = "/usr", uri = "file:/usr" },
    { path = "/tmp", type = "tmpfs" },
    { path = "/demo_data", uri = "file:demo_data" },
    { path = "/current", uri = "file:." },
]

# Trusted files (signed/encrypted in enclave)
sgx.trusted_files = [
    # Core system
    "file:{{ gramine.libos }}",
    "file:/usr/bin/python3",
    "file:/usr/bin/python3.10",
    
    # Demo files
    "file:sgx_inference.py",
    "file:demo_data/model.pkl", 
    "file:demo_data/patient.pkl",
    
    # Python 3.10 standard library (explicit paths)
    "file:{{ python.stdlib }}/",
    "file:{{ python.distlib }}/",
    "file:/usr/lib/python3.10/",
    "file:/usr/lib/python3/dist-packages/",
    "file:/usr/local/lib/python3.10/dist-packages/",
    "file:/lib/python3.10/",
    
    # System libraries
    "file:/lib/x86_64-linux-gnu/",
    "file:/lib64/", 
    "file:/usr/lib/",
    "file:/usr/lib/x86_64-linux-gnu/",
]

# Allowed files (can be accessed but not protected)
sgx.allowed_files = [
    "file:/tmp/",
    "file:/proc/cpuinfo",
    "file:/proc/meminfo", 
    "file:/proc/version",
    "file:/etc/host.conf",
    "file:/etc/hosts",
    "file:/etc/nsswitch.conf",
    "file:/etc/passwd",
    "file:/etc/group",
    "file:/etc/resolv.conf",
]

# Threading and networking
sys.enable_sigterm_injection = true
sys.enable_extra_runtime_domain_names_conf = true